# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sum_decor_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=sum_decor_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# OTP Configuration
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# AI Services
# Replicate API (SDXL, ControlNet for image generation)
REPLICATE_API_KEY=r8_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Gemini API (Image analysis)
GOOGLE_AI_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic Claude API (Text understanding)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Image Storage - Cloudinary
CLOUDINARY_CLOUD_NAME=sum-homes
CLOUDINARY_API_KEY=xxxxxxxxxxxxxxxxxxxxx
CLOUDINARY_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLOUDINARY_FOLDER=sum-decor

# Payment Gateways
# Paystack (Primary)
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret_here

# Flutterwave (Secondary)
FLUTTERWAVE_SECRET_KEY=your_flutterwave_secret_key_here
FLUTTERWAVE_PUBLIC_KEY=your_flutterwave_public_key_here
FLUTTERWAVE_ENCRYPTION_KEY=your_flutterwave_encryption_key_here

# SMS/OTP Service (Choose one)
# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Africa's Talking (Alternative)
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Termii (Nigerian SMS - Recommended)
TERMII_API_KEY=TLxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TERMII_SENDER_ID=SumDecor

# Email Service (Choose one)
# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@sumdecor.com
SENDGRID_FROM_NAME=Sum Decor AI

# Resend (Alternative)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# WhatsApp Business API (Optional)
WHATSAPP_BUSINESS_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WHATSAPP_PHONE_NUMBER_ID=xxxxxxxxxxxxxxx

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Free Trial Credits
FREE_SIGNUP_CREDITS=5

# Subscription Plans (in Naira - ₦)
PLAN_BASIC_PRICE=5000
PLAN_PRO_PRICE=15000
PLAN_AGENCY_PRICE=40000

# Credit Packages (in Naira - ₦)
CREDIT_PACK_10_PRICE=1000
CREDIT_PACK_30_PRICE=2500
CREDIT_PACK_100_PRICE=8000

# Generation Settings
DEFAULT_GENERATION_TIMEOUT_MS=60000
MAX_CONCURRENT_GENERATIONS=3

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
